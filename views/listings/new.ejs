<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation">
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" placeholder="Add a Catchy Title" type="string" class="form-control" required>
        <div class="valid-feedback">Looks Good!</div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" placeholder="Enter Description" type="string" class="form-control" required></textarea>
        <div class="invalid-feedback">Please Provide Description</div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Image Url</label>
        <input name="listing[image]" placeholder="Enter URL" type="string" class="form-control">
        </div>

        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
        <input name="listing[price]" placeholder="12,000" class="form-control" required>
        <div class="invalid-feedback">Please Provide Valid Price</div>
        </div>

        <div class="mb-3 col-md-8">
            <label for="country" class="form-label"Country></label>
        <input name="listing[country]" placeholder="India" type="string" class="form-control" required>
        <div class="invalid-feedback">Please Provide Country Name</div>
        </div>
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Loaction</label>
        <input name="listing[location]" placeholder="Rajasthan/Jaipur" type="string" class="form-control" required>
        <div class="invalid-feedback">Please Provide Location</div>
        </div>
        <br><br>
        <button class="btn btn-dark add-btn mt-2">ADD</button>
    </form>
    </div>
    </div>

